{
  "name": "rimac-vscode-debug-launcher",
  "displayName": "Rimac Debug Launcher",
  "description": "Start debugging, without having to define any tasks or launch configurations, even from the terminal.",
  "icon": "resources/logo/logo.png",
  "version": "2.1.1",
  "license": "MIT",
  "main": "out/extension.js",
  "publisher": "RimacAutomobili",
  "activationEvents": [
    "onCommand:rimacDebugLauncher.auto",
    "onCommand:rimacDebugLauncher.file",
    "onCommand:rimacDebugLauncher.launch",
    "onUri"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Debug Launcher - Configuration",
      "properties": {
        "debugLauncher": {
          "type": "object",
          "properties": {
            "[project.node]": {
              "type": "object",
              "properties": {
                "configuration": {
                  "type": "object"
                },
                "commands": {
                  "type": "array"
                }
              }
            }
          },
          "patternProperties": {
            "^\\[[a-zA-Z0-9_.-]*\\]$": {
              "type": "object",
              "description": "Debugger-specific configuration and commands overrides",
              "properties": {
                "configuration": {
                  "type": "object",
                  "description": "Debugger-specific configuration override",
                  "default": {}
                },
                "commands": {
                  "type": "array",
                  "description": "Debugger-specific commands override",
                  "default": []
                }
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "rimacDebugLauncher.auto",
        "title": "Debug Launcher: Auto"
      },
      {
        "command": "rimacDebugLauncher.file",
        "title": "Debug Launcher: File"
      },
      {
        "command": "rimacDebugLauncher.launch",
        "title": "Debug Launcher: Launch"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "rimacDebugLauncher.launch",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "rm -rf out && webpack --mode production",
    "publish": "vsce publish && npm publish",
    "compile": "webpack --mode development",
    "compile:watch": "webpack --mode development --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "package:local": "vsce package && code --install-extension rimac-vscode-debug-launcher-2.1.1.vsix"
  },
  "bugs": {
    "url": "https://github.com/ipazanin/vscode-debug-launcher/issues"
  },
  "author": {
    "name": "Rimac Automobili",
    "email": "ivan.pazanin@rimac-automobili.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ipazanin/vscode-debug-launcher.git"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "keywords": [
    "vscode",
    "vsc",
    "extension",
    "debug",
    "launcher",
    "terminal",
    "rimac"
  ],
  "categories": [
    "Debuggers",
    "Other"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.8",
    "absolute": "0.0.1",
    "json5": "^2.1.0",
    "lodash": "^4.17.11",
    "pify": "^4.0.1"
  },
  "devDependencies": {
    "ts-loader": "^5.2.1",
    "typescript": "^3.0.3",
    "vscode": "^1.1.4",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  }
}
